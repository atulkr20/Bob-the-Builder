{
  "openapi": "3.0.3",
  "info": {
    "title": "iot-device-logger",
    "version": "1.0.0",
    "description": "A service to log data from IoT devices for a short duration."
  },
  "servers": [
    {
      "url": "http://localhost:4000"
    }
  ],
  "paths": {
    "/api/device-datas": {
      "get": {
        "summary": "List device-datas",
        "responses": {
          "200": {
            "description": "Successful response"
          }
        }
      },
      "post": {
        "summary": "Create device-data",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/device-data"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          }
        }
      }
    },
    "/api/device-datas/{id}": {
      "get": {
        "summary": "Get device-data by id",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response"
          },
          "404": {
            "description": "Not found"
          }
        }
      },
      "put": {
        "summary": "Update device-data by id",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/device-data"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated"
          },
          "400": {
            "description": "Validation failed"
          }
        }
      },
      "delete": {
        "summary": "Delete device-data by id",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Deleted"
          },
          "404": {
            "description": "Not found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "device-data": {
        "type": "object",
        "required": [
          "deviceId",
          "timestamp",
          "sensorType",
          "value"
        ],
        "properties": {
          "deviceId": {
            "type": "string",
            "description": "Unique identifier of the IoT device."
          },
          "timestamp": {
            "type": "string",
            "description": "ISO 8601 formatted timestamp of the log entry."
          },
          "sensorType": {
            "type": "string",
            "description": "Type of sensor or data point (e.g., 'temperature', 'humidity', 'status')."
          },
          "value": {
            "type": "number",
            "description": "The measured value from the sensor or device."
          },
          "unit": {
            "type": "string",
            "description": "Unit of measurement for the value (e.g., 'C', '%', 'V')."
          },
          "location": {
            "type": "object",
            "additionalProperties": true,
            "description": "Optional geographical location of the device."
          }
        }
      }
    }
  }
}
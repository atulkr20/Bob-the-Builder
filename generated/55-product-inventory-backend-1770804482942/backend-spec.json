{
  "name": "product-inventory-backend",
  "serviceType": "crud_api",
  "ttlHours": 0.5,
  "description": "Backend for managing product inventory with title and metadata.",
  "resources": [
    {
      "name": "product",
      "description": "Represents a product item in the inventory.",
      "fields": [
        {
          "name": "id",
          "type": "number",
          "required": true,
          "description": "Unique identifier for the product."
        },
        {
          "name": "title",
          "type": "string",
          "required": true,
          "description": "Title of the product."
        },
        {
          "name": "metadata",
          "type": "object",
          "required": true,
          "description": "Additional metadata for the product."
        }
      ]
    }
  ]
}